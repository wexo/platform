{% block sw_product_list %}
    <sw-page class="sw-product-list">

        {% block sw_product_list_search_bar %}
            <template #search-bar>
                <sw-search-bar initialSearchType="product"
                               :initialSearch="term"
                               @search="onSearch">
                </sw-search-bar>
            </template>
        {% endblock %}

        {% block sw_product_list_smart_bar_header %}
            <template #smart-bar-header>
                {% block sw_product_list_smart_bar_header_title %}
                    <h2>
                        {% block sw_product_list_smart_bar_header_title_text %}
                            {{ $tc('sw-product.list.textProductOverview') }}
                        {% endblock %}

                        {% block sw_product_list_smart_bar_header_amount %}
                            <span v-if="!isLoading" class="sw-page__smart-bar-amount">
                                ({{ total }})
                            </span>
                        {% endblock %}
                    </h2>
                {% endblock %}
            </template>
        {% endblock %}

        {% block sw_product_list_smart_bar_actions %}
            <template #smart-bar-actions>
                {% block sw_product_list_smart_bar_actions_add %}
                    <sw-button :routerLink="{ name: 'sw.product.create' }" variant="primary">
                        {{ $tc('sw-product.list.buttonAddProduct') }}
                    </sw-button>
                {% endblock %}
            </template>
        {% endblock %}

        {% block sw_product_list_language_switch %}
            <template #language-switch>
                <sw-language-switch @on-change="onChangeLanguage"></sw-language-switch>
            </template>
        {% endblock %}

        <template #content>
            {% block sw_product_list_content %}
                <div class="sw-product-list__content">

                    {% block sw_product_list_grid %}
                        <sw-entity-listing ref="swProductGrid"
                                           class="sw-product-list-grid"
                                           :items="products"
                                           :columns="productColumns"
                                           :repository="productRepository"
                                           detailRoute="sw.product.detail"
                                           :showSelection="true"
                                           :isLoading="isLoading"
                                           @inline-edit-save="onInlineEditSave"
                                           @selection-change="updateSelection"
                                           @update-records="updateTotal">
                            {% block sw_product_list_grid_columns %}
                                {% block sw_product_list_grid_columns_name_preview %}
                                    <template #preview-name="{ item }">
                                        <sw-media-preview-v2 :source="item.cover ? item.cover.media : null"></sw-media-preview-v2>
                                    </template>
                                {% endblock %}

                                {% block sw_product_list_grid_columns_active %}
                                    <template #column-active="{ item, isInlineEdit }">
                                        {% block sw_product_list_grid_columns_active_inline_edit %}
                                            <template v-if="isInlineEdit">
                                                <sw-checkbox-field v-model="item.active"></sw-checkbox-field>
                                            </template>
                                        {% endblock %}

                                        {% block sw_product_list_grid_columns_active_content %}
                                            <template v-else>
                                                <sw-icon v-if="item.active" name="small-default-checkmark-line-medium" small class="is--active"></sw-icon>
                                                <sw-icon v-else name="small-default-x-line-medium" small class="is--inactive"></sw-icon>
                                            </template>
                                        {% endblock %}
                                    </template>
                                {% endblock %}

                                {% block sw_product_list_grid_columns_price %}
                                    <template v-for="currency in currencies"
                                              :slot="`column-price-${currency.isoCode}`"
                                              slot-scope="{ item }">
                                        {{ getCurrencyPriceByCurrencyId(item.id, currency.id).gross | currency(currency.isoCode) }}
                                    </template>
                                {% endblock %}

                                {% block sw_product_list_grid_columns_stock %}
                                    <template #column-stock="{ item, isInlineEdit, compact }">
                                        {% block sw_product_list_grid_columns_stock_inline_edit %}
                                            <template v-if="isInlineEdit">
                                                <sw-number-field :size="compact ? 'small' : 'default'" v-model="item.stock"></sw-number-field>
                                            </template>
                                        {% endblock %}

                                        {% block sw_product_list_grid_columns_stock_content %}
                                            <template v-else>
                                                {{ item.stock }}
                                                <sw-color-badge :variant="item.stock | stockColorVariant"></sw-color-badge>
                                            </template>
                                        {% endblock %}
                                    </template>
                                {% endblock %}

                                {% block sw_product_list_grid_columns_actions %}
                                    <template #more-actions="{ item }">
                                        {% block sw_product_list_grid_columns_actions_duplicate %}
                                            <sw-context-menu-item
                                                class="sw-product-list-grid__duplicate-action"
                                                :disabled="item.childCount > 0"
                                                :title="duplicationDisabledTitle(item)"
                                                @click="onDuplicate(item)">
                                                {{ $tc('sw-product.list.buttonDuplicate') }}
                                            </sw-context-menu-item>
                                        {% endblock %}
                                    </template>
                                {% endblock %}
                            {% endblock %}
                        </sw-entity-listing>

                    {% endblock %}

                    {% block sw_product_list_empty_state %}
                        <sw-empty-state v-if="!isLoading && !total" :title="$tc('sw-product.list.messageEmpty')"></sw-empty-state>
                    {% endblock %}

                    {% block sw_product_list_grid_loader %}
                        <sw-loader v-if="isLoading"></sw-loader>
                    {% endblock %}
                </div>
            {% endblock %}
        </template>

        {% block sw_product_list_sidebar %}
            <template #sidebar>
                <sw-sidebar>
                    {% block sw_product_list_sidebar_refresh %}
                        <sw-sidebar-item
                            icon="default-arrow-360-left"
                            :title="$tc('sw-product.list.titleSidebarItemRefresh')"
                            @click="onRefresh">
                        </sw-sidebar-item>
                    {% endblock %}
                    {% block sw_product_list_sidebar_filter %}
                        <sw-sidebar-item
                            icon="default-action-filter"
                            title="Filter"
                            ref="filter">

                            <sw-container columns="1fr " gap="6px" class="sidebar--filter-container">
                                <sw-switch-field size="small" :label="$tc('sw-product.list.filter.missingCover.label')" v-model="filter.missingCover" disabled></sw-switch-field>

                                <sw-switch-field size="small" :label="$tc('sw-product.list.filter.showAllProductVariants.label')" v-model="filter.showAllProductVariants"></sw-switch-field>

                                <sw-switch-field size="small" :label="$tc('sw-product.list.filter.clearanceSale.label')" v-model="filter.clearanceSale"></sw-switch-field>
                            </sw-container>

                            <sw-container columns="1fr" gap="12px" class="sidebar--filter-container">
                                <sw-single-select
                                        v-model="filter.activeInactive"
                                        :label="$tc('sw-product.list.filter.activeInactive.label')"
                                        :options="activeInactiveOptions"
                                        valueProperty="value"
                                        labelProperty="name"
                                        :value="filter.activeInactive">
                                </sw-single-select>

                                <sw-multi-select
                                        v-model="filter.selectedManufacturers"
                                        :label="$tc('sw-product.list.filter.manufacturer.label')"
                                        :options="manufacturers"
                                        valueProperty="id"
                                        labelProperty="name"
                                        :value="filter.selectedManufacturers">
                                </sw-multi-select>

                                <sw-text-field :placeholder="$tc('sw-product.list.filter.productNumber.placeholder')"
                                               :label="$tc('sw-product.list.filter.productNumber.label')"
                                               :value="filter.productNumber"
                                               @input="updateProductNumberFilter">
                                </sw-text-field>
                            </sw-container>

                            <sw-container columns="1fr" gap="12px" class="sidebar--filter-container">
                                <h3>{{ $tc('sw-product.list.filter.price.label') }}</h3>
                                <sw-container columns="1fr 1fr" gap="12px">
                                    <sw-number-field numberType="float"
                                                     :label="$tc('sw-product.list.filter.price.from.placeholder')"
                                                     :placeholder="$tc('sw-product.list.filter.price.from.placeholder')"
                                                     v-model="filter.price.from">
                                    </sw-number-field>

                                    <sw-number-field numberType="float"
                                                     :label="$tc('sw-product.list.filter.price.to.placeholder')"
                                                     :placeholder="$tc('sw-product.list.filter.price.to.placeholder')"
                                                     v-model="filter.price.to">
                                    </sw-number-field>
                                </sw-container>
                            </sw-container>

                            <sw-container columns="1fr" gap="12px" class="sidebar--filter-container">
                                <h3>{{ $tc('sw-product.list.filter.stock.label') }}</h3>

                                <sw-container columns="1fr 1fr" gap="12px">
                                    <sw-number-field numberType="float"
                                                     :label="$tc('sw-product.list.filter.stock.from.placeholder')"
                                                     :placeholder="$tc('sw-product.list.filter.stock.from.placeholder')"
                                                     v-model="filter.stock.from">
                                    </sw-number-field>

                                    <sw-number-field numberType="float"
                                                     :label="$tc('sw-product.list.filter.stock.to.placeholder')"
                                                     :placeholder="$tc('sw-product.list.filter.stock.to.placeholder')"
                                                     v-model="filter.stock.to">
                                    </sw-number-field>
                                </sw-container>
                            </sw-container>

                            <sw-container columns="1fr" gap="12px" class="sidebar--filter-container">
                                <sw-single-select
                                        v-model="filter.salesChannel"
                                        :label="$tc('sw-product.list.filter.salesChannel.label')"
                                        :options="salesChannels"
                                        valueProperty="id"
                                        labelProperty="name"
                                        :value="filter.salesChannel">
                                </sw-single-select>
                            </sw-container>

                        </sw-sidebar-item>
                    {% endblock %}
                </sw-sidebar>
            </template>
        {% endblock %}
    </sw-page>
{% endblock %}
